while True:
    number = input("Enter a number: ")
    try:
        val = int(number)
        if val < 0:
            print("It is an invalid entry. Don't use non-numeric, float, or negative values!")
            continue
        break
    except ValueError:
        print("	 It is an invalid entry. Don't use non-numeric, float, or negative values!")
sum = 0
strifarm = str(val)
lenifarm = len(strifarm)
for i in strifarm:
  sum += int(i)**lenifarm
if sum == val:
  print(val,"is an Armstrong Number",end="")
else:
  print(val,"is not an Armstrong Number")
